<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="numberGenerator" class="academy.learnprogramming.NumberGeneratorImpl"/>

    <bean id="game" class="academy.learnprogramming.GameImpl">
        <!--constructor-arg ref="numberGenerator"/--><!--used for constructor injection-->
        <property name="numberGenerator" ref="numberGenerator"/> <!-- those are not the same 1st reefers to field in class, 2nd to bean id-->
    </bean>

</beans>